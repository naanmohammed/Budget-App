<% content_for :title, "Categories" %>
<section class='categories-section'>
<div id="categories">
  <% if @categories.any? %>
  <% @categories.each do |category| %>
    <%= link_to category do %>
      <%= render category %>
    <% end %>
  <% end %>
  <% else %>
    <div class="no-categories">
      <p>No categories yet</p>
    </div>
  <% end %>
</div>

<div class="btn-container">
  <%= link_to "New category", new_category_path, class: 'btn btn-block' %>
</div>
</section>
