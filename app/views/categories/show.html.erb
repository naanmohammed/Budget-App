<%= stylesheet_link_tag "category_show" %>
<% content_for :title, @category.name %>
<% content_for :back_link, link_to('<i class="fa-solid fa-circle-chevron-left"></i>'.html_safe, categories_path) %>

<section class="category-show-section">
  <%= render @category %>
  <% if @expenses.any? %>
  <% @expenses.each do |expense| %>
    <%= render expense %>
  <% end %>
  <% else %>
    <div class="no-expenses">
      <p>No expenses yet</p>
    </div>
  <% end %>

    <div class="btn-container">
      <%= link_to 'Add expense', new_category_expense_path(@category.id), class: 'btn btn-block' %>
    </div>
  </div>
</section>
