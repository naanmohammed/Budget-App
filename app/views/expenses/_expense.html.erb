<div id="<%= dom_id expense %>" class="card mb-3">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h5 class="card-title"><%= expense.name %></h5>
        <p class="card-text"><%= expense.created_at.strftime("%e %B %Y at %I:%M%p") %></p>
      </div>
      <p class="card-text"><%= number_to_currency(expense.amount) %></p>
    </div>
  </div>
</div>
