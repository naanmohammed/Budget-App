<%= form_with(url: category_expenses_path, model: expense, html: { class: 'form-control' }) do |form| %>
  <% if expense.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>
      <ul>
        <% expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Expense Name", class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Enter name of expense..' %>
  </div>

  <div class="mb-3">
    <%= form.label :amount, "Amount Spent", class: 'form-label' %>
    <%= form.text_field :amount, class: 'form-control', placeholder: 'Enter amount spent..' %>
  </div>

  <div class="btn-container">
    <%= form.submit "Add Expense", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
